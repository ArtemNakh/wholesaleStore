@model wholesaleStore.Core.Models.Goods

@{
    ViewData["Title"] = "Goods Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        <h2>@Model.Title</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Maker</dt>
            <dd class="col-sm-9">@Model.Maker</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Cost</dt>
            <dd class="col-sm-9">@Model.Cost</dd>

            <dt class="col-sm-3">Numbers Available</dt>
            <dd class="col-sm-9">@Model.Numbers</dd>
        </dl>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Goods")" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
